<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/url_search_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter a query, then click Search"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/display_text"
            android:layout_below="@id/url_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingTop="8dp"
            android:text="Click search and your URL will show up here!" />

        <ScrollView
            android:id="@+id/scroll_in_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/url_result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:paddingTop="8dp" />

        </ScrollView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>